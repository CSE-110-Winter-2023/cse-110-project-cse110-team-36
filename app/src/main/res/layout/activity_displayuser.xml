<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/exit_button"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DisplayUserActivity">


    <EditText
        android:id="@+id/user_name"
        android:layout_width="280dp"
        android:layout_height="56dp"
        android:autofillHints=""
        android:hint="NAME"
        android:inputType="text"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.408" />

    <EditText
        android:id="@+id/user_uid"
        android:layout_width="280dp"
        android:layout_height="56dp"
        android:autofillHints=""
        android:clickable="false"
        android:hint="@string/uid"
        android:inputType="text"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_name"
        app:layout_constraintVertical_bias="0.191" />

    <Button
        android:id="@+id/edit_button"
        android:layout_width="110dp"
        android:layout_height="52dp"
        android:text="EDIT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_uid"
        app:layout_constraintVertical_bias="0.233" />

    <Button
        android:id="@+id/user_exit_btn"
        android:layout_width="59dp"
        android:layout_height="50dp"
        android:onClick="onExitClicked"
        android:text="x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

<!--    <Button-->
<!--        android:id="@+id/create_btn"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:onClick="onLaunchCreateClicked"-->
<!--        android:text="Create Account"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
